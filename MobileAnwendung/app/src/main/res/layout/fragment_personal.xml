<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
   <data>
       <variable
           name="personalViewModel"
           type="com.example.myernaehrungapplication.fragments.personal.PersonalViewModel" />
   </data> 

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.personal.personalFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/black"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:layout_marginTop="50dp"
        android:text="Welcome"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="257dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/weighttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Weight in Kg"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/weightd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/weighttitle"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_decrease"

                    android:onClick="decrease"

                    />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weighttitle"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="80" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/weighti"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/weighttitle"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_increase"


                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/heighttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Height in cm"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/heightd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/heighttitle"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_decrease" />

                <TextView
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heighttitle"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="180"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/heighti"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/heighttitle"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_increase" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <RadioGroup
        android:id="@+id/radioGroupmf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout1"
        tools:layout_editor_absoluteX="20dp">

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:textSize="20dp" />
    </RadioGroup>

        <TextView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundshape"
            android:padding="10dp"
            android:text="@string/birthdate"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/radioGroupmf"
            app:layout_constraintTop_toBottomOf="@id/radioGroupmf"
            />




    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="years old "
        app:layout_constraintStart_toEndOf="@id/selectDate"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupmf"
        android:textSize="17dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>